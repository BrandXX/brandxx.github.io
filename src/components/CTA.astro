---
interface Props {
  title: string;
  description: string;
  primaryHref: string;
  primaryLabel: string;
  secondaryHref?: string;
  secondaryLabel?: string;
}

const {
  title,
  description,
  primaryHref,
  primaryLabel,
  secondaryHref,
  secondaryLabel
} = Astro.props;
---

<section class="mt-16 rounded-3xl border border-zinc-300/50 bg-gradient-to-r from-zinc-100 to-white p-8 dark:border-white/10 dark:from-white/10 dark:to-white/5">
  <h2 class="text-2xl font-semibold tracking-tight">{title}</h2>
  <p class="mt-2 text-zinc-700 dark:text-zinc-300">{description}</p>
  <div class="mt-6 flex flex-wrap gap-3">
    <a
      class="rounded-xl bg-zinc-900 px-4 py-2 text-sm font-semibold text-zinc-50 transition hover:bg-zinc-700 dark:bg-white dark:text-zinc-900 dark:hover:bg-zinc-200"
      href={primaryHref}
    >
      {primaryLabel}
    </a>
    {secondaryHref && secondaryLabel && (
      <a
        class="rounded-xl border border-zinc-300/70 bg-white px-4 py-2 text-sm text-zinc-800 transition hover:bg-zinc-100 dark:border-white/10 dark:bg-white/5 dark:text-zinc-200 dark:hover:bg-white/10"
        href={secondaryHref}
      >
        {secondaryLabel}
      </a>
    )}
  </div>
</section>
