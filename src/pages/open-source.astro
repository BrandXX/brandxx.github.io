---
import BaseLayout from '../layouts/BaseLayout.astro';
import BentoCard from '../components/BentoCard.astro';
import SectionHeader from '../components/SectionHeader.astro';
---

<BaseLayout
  title="Open Source | TechSoft Systems"
  description="Open-source contributions, internal tooling extracts, and demo projects from TechSoft Systems."
>
  <section class="pt-12">
    <SectionHeader
      title="Open source"
      subtitle="Public contributions, sanitized internal tooling extracts, and demo projects that can link directly to GitHub."
    />

    <div class="mt-8 grid gap-4 md:grid-cols-3">
      <BentoCard
        title="Open-WebUI Contributions"
        description="Product improvements, issue triage, and integration notes focused on secure private AI workflows."
      >
        <a href="#" class="mt-4 inline-block text-sm font-semibold text-cyan-600 dark:text-cyan-400">GitHub repo placeholder →</a>
      </BentoCard>
      <BentoCard
        title="Internal Tools"
        description="Sanitized utility scripts and automation helpers extracted from real operations playbooks."
      >
        <a href="#" class="mt-4 inline-block text-sm font-semibold text-cyan-600 dark:text-cyan-400">GitHub repo placeholder →</a>
      </BentoCard>
      <BentoCard
        title="Demos"
        description="Reference demos for private inference pipelines, observability views, and workflow guardrails."
      >
        <a href="#" class="mt-4 inline-block text-sm font-semibold text-cyan-600 dark:text-cyan-400">GitHub repo placeholder →</a>
      </BentoCard>
    </div>
  </section>
</BaseLayout>
