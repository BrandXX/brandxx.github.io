---
import BaseLayout from '../layouts/BaseLayout.astro';
import BentoCard from '../components/BentoCard.astro';
import CTA from '../components/CTA.astro';
import SectionHeader from '../components/SectionHeader.astro';
---

<BaseLayout title="Services | TechSoft Systems" description="Private AI, infrastructure engineering, reliability, and security services.">
  <section class="pt-12">
    <SectionHeader
      title="Services"
      subtitle="Services built for private AI, resilient infrastructure, and teams that operate under real pressure."
    />

    <div class="mt-8 grid gap-4 md:grid-cols-2">
      <BentoCard title="Private LLM Platform Engineering" description="Design and deploy private AI platforms for on-prem or hybrid environments, including model serving, RAG integration, access control, and operational runbooks." />
      <BentoCard title="GPU Workload & Inference Tuning" description="Increase throughput and stability with practical tuning across batching, memory profiles, concurrency, and queue behavior." />
      <BentoCard title="Infrastructure Modernization" description="Upgrade aging environments with virtualization consolidation, storage/network redesign, migration planning, and rollback-safe cutovers." />
      <BentoCard title="Security, Governance, and Compliance" description="Implement policy-aware controls that support adoption without introducing unmanaged risk." />
      <BentoCard title="Operations & Reliability Engineering" description="Build predictable operations across monitoring, alert quality, incident flow, backup/DR, and patch lifecycle discipline." />
      <BentoCard title="Training & Enablement" description="Role-based AI training for IT teams, business users, and leadership with practical deliverables and rollout support." />
    </div>
  </section>

  <CTA
    title="Need a scoped engagement?"
    description="Share your environment, priorities, and timeline. Weâ€™ll map a practical implementation plan with milestones and risk controls."
    primaryHref="mailto:sales@techsoftsys.com?subject=Services%20Inquiry"
    primaryLabel="Start via email"
    secondaryHref="/contact"
    secondaryLabel="Contact page"
  />

  <section class="mt-6 rounded-3xl border border-zinc-300/50 bg-white/80 p-6 dark:border-white/10 dark:bg-white/5">
    <h2 class="text-xl font-semibold tracking-tight">30-minute architecture review</h2>
    <p class="mt-2 text-sm text-zinc-700 dark:text-zinc-300">
      Book a focused review to identify the highest-impact reliability, AI platform, or migration priorities for your next quarter.
    </p>
    <div class="mt-4 flex flex-wrap gap-3">
      <a
        href="mailto:sales@techsoftsys.com?subject=30-Minute%20Architecture%20Review"
        class="rounded-xl bg-zinc-900 px-4 py-2 text-sm font-semibold text-zinc-50 transition hover:bg-zinc-700 dark:bg-white dark:text-zinc-900 dark:hover:bg-zinc-200"
      >
        Book architecture review
      </a>
      <a
        href="/work"
        class="rounded-xl border border-zinc-300/70 bg-white px-4 py-2 text-sm text-zinc-800 transition hover:bg-zinc-100 dark:border-white/10 dark:bg-white/5 dark:text-zinc-200 dark:hover:bg-white/10"
      >
        See delivery outcomes
      </a>
    </div>
  </section>
</BaseLayout>
